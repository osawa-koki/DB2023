@charset "UTF-8";#Single #content-header{display:grid;gap:.5rem;grid-template-columns:1fr 1fr;margin:1rem auto;width:100%;max-width:500px;border:1px #d3d3d3 solid;padding:.5rem}#Single #content-header *{text-align:center}#Single #content-header *::before{font-size:1.1rem;font-weight:700}#Single #content-header #content-title{grid-column:1/2;grid-row:1/2}#Single #content-header #content-title::before{content:"タイトル: "}#Single #content-header #content-date{grid-column:2/3;grid-row:1/2}#Single #content-header #content-date::before{content:"更新日: "}#Single #content-header #content-description{grid-column:1/3;grid-row:2/3;text-align:left;margin-left:4rem;text-indent:-3.5rem}#Single #content-header #content-description::before{content:"説明: "}#Single #content-header #content-categories{grid-column:1/3;grid-row:3/4;display:flex;flex-wrap:wrap}#Single #content-header #content-categories::before{content:"カテゴリ: ";display:block;margin-right:1rem}#Single #content-header #content-categories .category{font-size:.8rem;padding:.3rem .5rem;border-radius:1rem;color:#0969da;background-color:#ddf4ff;margin-right:.5rem;margin-bottom:.5rem}#Single #content-header #content-tags{grid-column:1/3;grid-row:4/5;display:flex;flex-wrap:wrap}#Single #content-header #content-tags::before{content:"タグ: ";display:block;margin-right:1rem}#Single #content-header #content-tags .tag{font-size:.8rem;padding:.3rem .5rem;border-radius:1rem;color:#0969da;background-color:#ddf4ff;margin-right:.5rem;margin-bottom:.5rem}#Single #content-body{max-width:1200px;margin:0 auto;padding:1rem}