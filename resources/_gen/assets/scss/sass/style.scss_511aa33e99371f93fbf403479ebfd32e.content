@charset "UTF-8";*{margin:0;padding:0;font-family:consolas,yu gothic medium,游ゴシック medium,YuGothic,游ゴシック体,yu-gothic}main{max-width:1200px;margin:0 auto;padding:1rem}#Index #IndexHeader{display:flex;flex-direction:column;align-items:center}#Index #IndexHeader h1{font-size:2rem;margin-top:1rem}#Index #IndexHeader #Logo{width:100px;border-radius:50%;border:1px #d3d3d3 solid;margin-top:1rem}#Index #textbook-content{display:grid;gap:1rem;margin-top:3rem}@media screen and (max-width:540px){#Index #textbook-content{grid-template-columns:repeat(2,1fr)}}@media screen and (min-width:541px){#Index #textbook-content{grid-template-columns:repeat(4,1fr)}}@media screen and (min-width:1024px){#Index #textbook-content{grid-template-columns:repeat(6,1fr)}}#Index #textbook-content a{display:flex;justify-content:center;align-items:center;color:#0e6dfe;text-decoration:none;border-right:1px #d3d3d3 solid}#Index #textbook-content a:last-child{border-right:none}#Index #textbook-content a:hover{text-decoration:underline}